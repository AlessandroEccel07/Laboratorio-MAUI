<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloLayout.MainPage">

    <ScrollView>

        <Grid ColumnSpacing="10" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>   
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                
            </Grid.ColumnDefinitions>
            <VerticalStackLayout Padding="10" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
                <Label Text="Ciao"></Label>
            </VerticalStackLayout >
            
            <Button Grid.Column="0" Grid.Row="1" Text="B(0,1)"/>
            <Button Grid.Column="1" Grid.Row="1" Text="B(0,1)"/>
           
        </Grid>
        
    </ScrollView>

</ContentPage>
