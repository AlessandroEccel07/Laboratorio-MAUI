<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuiz.MainPage">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" Spacing="10">

            <Label x:Name="ScoreLabel"
                   Text="Punteggio = 0"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="{StaticResource Primary}"/>
            <Label x:Name="Domanda"
                   Text="DOMANDA"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>
            <Label x:Name="QuestionTextLabel"
                   Text="Caricamento domanda..."
                   FontSize="24"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold"
                   TextColor="Black"/>
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button x:Name="TrueButton"
                        Text="Vero"
                        Clicked="OnAnswer_Clicked"
                        CommandParameter="true"
                        FontSize="18"
                        BackgroundColor="#13ee63"
                        CornerRadius="10"/>
                <Button x:Name="FalseButton"
                        Text="Falso"
                        Clicked="OnAnswer_Clicked"
                        CommandParameter="false"
                        FontSize="18"
                        BackgroundColor="Red"
                        CornerRadius="10"/>
            </HorizontalStackLayout>
            <Button x:Name="ResetButton"
                    Text="Reset"
                    Clicked="ResetButton_Clicked"
                    FontSize="20"
                    BackgroundColor="Red"
                    CornerRadius="10"
                    WidthRequest="300"
                    />
            <Button
                    x:Name="btnResult"
                    WidthRequest="300"
                    Text="Vai a risultati"
                    FontSize="20"
                    CornerRadius="10"
                    Clicked="btnResult_Clicked"
                    />



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
